<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/complaint_layout">

    <EditText
        android:id="@+id/et_complaint"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="24dp"
        android:hint="Enter Your Complaint Here"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/complaint_submit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:text="S U B M I T"
        android:background="@drawable/home_tv_bg"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@id/et_complaint"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>