<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".DriverHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/working_status_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/driver_status_layout_bg">

            <TextView
                android:id="@+id/working_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:id="@+id/lottie_working"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="83772-successful-notification.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            android:layout_above="@id/driver_status_switch" />
        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:id="@+id/lottie_not_working"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="14651-error-animation.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            android:layout_above="@id/driver_status_switch" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/driver_status_switch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />


        <RelativeLayout
            android:id="@+id/start_working_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/driver_status_switch"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/driver_start_working_btn_bg"
            android:elevation="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Start Working"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stop_working_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/start_working_bt"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/driver_stop_working_btn_bg"
            android:elevation="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Stop Working"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_requestBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/stop_working_bt"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/pending_request_view_bg"
            android:elevation="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Pending Requests"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>


